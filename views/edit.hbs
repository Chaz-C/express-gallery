<form action="/gallery/{{photo.id}}/?_method=PUT" method="POST">
  <img src="{{photo.link}}" alt=""><br>
  Author: <br>
  <input class="author-form" type="text" placeholder="name" name="author" autocomplete="off" value={{photo.author}} /><br>
  Link: <br>
  <input class="link-form" type="text" placeholder="url" name="link" autocomplete="off" value="{{photo.link}}" /><br>
  Description: <br>
  <textarea class="description-form" name="description" id="" cols="30" rows="10" autocomplete="off" />{{photo.description}}</textarea><br>
  <input class="submit-form" type="submit" value="Post Photo">
</form>

{{{messages}}}