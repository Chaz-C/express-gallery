{{> nav}}

{{> header}}

<form id="forms" action="/gallery/login" method="post">
    <div>
        <label>Username:</label><br>
        <input class="text-form" type="text" name="username" autocomplete="off" />
    </div>
    <div>
        <label>Password:</label><br>
        <input class="text-form" type="password" name="password" autocomplete="off" />
    </div>
    <div>
        <input type="submit" value="Log In"/>
    </div>
</form>


<div id="photo-sidebar">

{{#each photos}}
<div class="small-photo-box">
  <a href="/gallery/{{id}}">
    <div class="photos" style="background:url({{link}}); background-size: cover; background-position: center;
    "></div>
  </a>
  <div class="author">
    Author: {{author}}
  </div>
</div>
{{/each}}

</div>
{{{messages}}}

<div id="bottom-border"></div>
