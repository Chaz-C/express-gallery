{{> nav}}

{{> header}}

<form id="forms" action="/gallery" method="POST">
  Author: <br>
  <input class="text-form" type="text" placeholder="name" name="author" autocomplete="off" /><br>
  Link: <br>
  <input class="text-form"type="text" placeholder="url" name="link" autocomplete="off" /><br>
  Description: <br>
  <textarea name="description" class="text-form" cols="30" rows="10" autocomplete="off"></textarea><br>
  <input class="link-button" type="submit" value="Post Photo">
</form>

<div id="photo-sidebar">
  {{#each photos}}
    <div class="small-photo-box">
      <a href="/gallery/{{id}}">
        <div class="photos" style="background:url({{link}}); background-size: cover; background-position: center;
        "></div>
      </a>
      <div class="author">
        Author: {{author}}
      </div>
    </div>
  {{/each}}
</div>

{{{messages}}}

<div id="bottom-border"></div>
